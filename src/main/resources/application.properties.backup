# below is H2 configuration
#spring.datasource.generate-unique-name=false
#spring.datasource.name=tacocloud

#telling Hibernate that we don't want to create tables every time application starts
spring.jpa.hibernate.ddl-auto=update

#for database connectivity
#spring comes to know from where to read/write data from here
spring.datasource.url=jdbc:mysql://${MYSQL_HOST:localhost}:3306/taco_app
spring.datasource.username=root
spring.datasource.password=Sufyan@123
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.jpa.show-sql: true

#telling Hibernate not to auto-map table names based on Entity classes. We are using @Table annotation to specify table names
spring.jpa.hibernate.naming.implicit-strategy=org.hibernate.boot.model.naming.ImplicitNamingStrategyLegacyJpaImpl
spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl

#to pring query values
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type=TRACE